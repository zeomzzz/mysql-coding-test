SELECT F.FLAVOR
FROM FIRST_HALF F
     LEFT JOIN JULY J ON F.FLAVOR = J.FLAVOR
GROUP BY F.FLAVOR
ORDER BY SUM(F.TOTAL_ORDER) + SUM(J.TOTAL_ORDER) DESC
LIMIT 3

-- 240112
SELECT FLAVOR
FROM (
        SELECT F.FLAVOR FLAVOR
            , SUM(F.TOTAL_ORDER + J.TOTAL_ORDER) SUM_ORDER
        FROM FIRST_HALF F
            JOIN JULY J
            ON F.FLAVOR = J.FLAVOR
        GROUP BY FLAVOR
        ORDER BY SUM_ORDER DESC
    ) A
LIMIT 3
