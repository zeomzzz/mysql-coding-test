SELECT n.ANIMAL_ID
     , n.NAME
FROM ANIMAL_INS n
    INNER JOIN ANIMAL_OUTS o ON n.ANIMAL_ID = o.ANIMAL_ID
ORDER BY TIMESTAMPDIFF(DAY, o.DATETIME, n.DATETIME)
LIMIT 2

-- 240131
-- 입양을 간 동물 중
-- 보호 기간이 가장 길었던 동물 두 마리의 아이디와 이름
SELECT I.ANIMAL_ID
    , I.NAME
FROM ANIMAL_INS I
    JOIN ANIMAL_OUTS O
    ON I.ANIMAL_ID = O.ANIMAL_ID
ORDER BY DATEDIFF(O.DATETIME, I.DATETIME) DESC
LIMIT 2
